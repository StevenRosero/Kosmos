<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    tools:context=".activities.RegisterActivity">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/regIncidenciaImagen"
        android:layout_width="142dp"
        android:layout_height="174dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="396dp"
        android:layout_x="139dp"
        android:layout_y="75dp"
        android:scaleType="centerCrop"
        app:civ_border_color="#ffffff"
        app:civ_border_width="5dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#FFF"
        app:civ_shadow_radius="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round"
        tools:ignore="MissingConstraints,NotSibling" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="188dp"
        android:text="Usuario"
        android:textColor="#5689D3"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/regEmail"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_alignTop="@+id/regName"
        android:layout_alignBottom="@+id/textView3"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="-57dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#5689D3"
        android:textColorHighlight="#5689D3"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="272dp"
        android:text="Contraseña"
        android:textColor="#5689D3"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="332dp"
        android:text="Repetir Contraseña"
        android:textColor="#5689D3"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/regPass1"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="302dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#5689D3"
        android:textColorHighlight="#5689D3"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/regPass2"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="359dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#5689D3"
        android:textColorHighlight="#5689D3"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="428dp"
        android:background="#5689D3"
        android:text="Registrarse"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="507dp"
        android:background="@android:color/holo_red_light"
        android:text="Google Login"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/regName"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="-2dp" />
</RelativeLayout>