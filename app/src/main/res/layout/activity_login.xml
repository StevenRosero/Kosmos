<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    tools:context=".activities.LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="247dp"
        android:layout_height="192dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="51dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="53dp"
        app:srcCompat="@drawable/kosmos_text" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="12dp"
        android:text="@string/tvEmailAcceso"
        android:textColor="#5689D3"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="248dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="#5689D3"
        android:textColorHighlight="#5689D3"
        android:textColorHint="#5689D3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="307dp"
        android:text="Contraseña"
        android:textColor="#5689D3"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnAcceso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="432dp"
        android:background="#5689D3"
        android:text="Iniciar sesión"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnAcceso2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="499dp"
        android:background="#5689D3"
        android:onClick="accesoRegistro"
        android:text="Registrarse"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etContrasenia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="338dp"
        android:ems="10"
        android:inputType="textPassword|textWebPassword"
        android:textColor="#5689D3"
        android:textColorHighlight="#5689D3" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/logInBar"
        android:layout_width="242dp"
        android:layout_height="256dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="391dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="24dp"
        android:layout_x="185dp"
        android:layout_y="411dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnAcceso"
        app:layout_constraintEnd_toEndOf="@+id/btnAcceso"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="@+id/btnAcceso"
        app:layout_constraintTop_toTopOf="@+id/btnAcceso"
        app:layout_constraintVertical_bias="0.533"
        app:lottie_autoPlay="true"
        app:lottie_fileName="loadingColors.json"
        app:lottie_imageAssetsFolder="assets"
        app:lottie_loop="true" />
</RelativeLayout>